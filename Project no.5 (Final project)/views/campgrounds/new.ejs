<% include ../partials/header %>
<div class="container">
<h1>Create a New Campground</h1>
	<div>
		<form action="/campgrounds" method="post">
			<div class="form-group">
				<label for"newName">Name Of Campground</label>
				<input type="text" class="form-control" id="newName" placeholder="Eg. Paradise" name="newName">
			</div>
			<div class="form-group">
				<label for"newImage">Image URL</label>
				<input type="text" class="form-control" id="newImage" placeholder="Eg. http://www.images.com/camping+site.jpg" name="newImage">
			</div>
			<div class="form-group">
				<label for"newDesc">Description</label>
				<input type="text" class="form-control" id="newDesc" placeholder="Eg. Alot of coconut trees and clear blue water" name="newDesc">
			</div>
			<div class="form-group">
				<input type="submit" class="btn btn-lg btn-primary">
			</div>
		</form>
	</div>
	<a href="/campgrounds">Return to view campgrounds</a>
</div>
<% include ../partials/footer %>