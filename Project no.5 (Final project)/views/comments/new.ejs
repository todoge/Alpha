	<div class="container">
		<h1>Create a new comment for <%=campground.name%></h1>
		<div>
			<form action="/campgrounds/<%=campground._id%>/comments" method="post">
				<div class="form-group">
					<label for"text">Comment</label>
				<input type="text" class="form-control" id="text" name="Comment[text]">
			</div>
				<div class="form-group">
					<input type="submit" class="btn btn-lg btn-primary">
			</div>
		</form>
	</div>
			<a href="/campgrounds">Return to view campgrounds</a>
		</div>
